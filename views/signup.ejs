<%- include('partials/header') -%>

<body>
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">

            

            <% if (locals.messages.errors) { %>
                <% messages.errors.forEach( el => { %>
                    <div class="alert alert-danger"><%= el.msg %></div>
                <% }) %>    
            <% } %>
            <% if (locals.messages.info) { %>
                <% messages.info.forEach( el => { %>
                    <div class="alert alert-info"><%= el.msg %></div>
                <% }) %>    
            <% } %>
                    <h2 class="login-header">Sign Up</h2>
                    <!-- LOGIN FORM -->
                    <form class="login-form"  action="/signup" method="post">
                        <div class="form-group">
                            <label class="form-label">Username</label>
                            <input type="text" class="form-control" name="username">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Email</label>
                            <input type="text" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Password</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <div>
                            <select class="usertype" name="usertype">
                                <option value="professional">I am a professional.</option>
                                <option value="client">I am a client.</option>
                            </select>
                        </div>
                        <button type="submit" class="login-submit btn btn-warning btn-su">Sign up</button>
                    </form>

                    <p class="no-account">Already have an account? <a href="/login">Login.</a></p>
                    <p class="no-account">Or go <a href="/">home</a>.</p>

        </div>
    </div>
    <footer></footer>
</body>

</html>