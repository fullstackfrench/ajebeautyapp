<!doctype html>
<html>
<head>
    <title>aje beauty</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

  <header>
    <h1>aje beauty</h1>
    <a href="/login" class="btn btn-default btn-sm login">Login</a>
    <a href="/signup" class="btn btn-default btn-sm signUp">Sign Up</a>
    <form action="/logout/?_method=GET" method="POST">
      <button>Logout</button>
    </form>
  </header>

        
  <section>
    <form action="/profile/search" method="POST">
      <input class="search" type="text" placeholder="Service, stylist, salon" name="search">
      <button type="submit" class="search-button">Search</button>
    </form>
  </section>
 
  <h2>browse by services</h2>
  <section class="middle services">
    
    <section>
      <form action="/profile/search/silkpress" method="POST">
        <button type="submit" class="search-button">Silk-Press</button>
      </form>
    </section>
    <section>
      <form action="/profile/search/braids" method="POST">
        <button type="submit" class="search-button">Braids</button>
      </form>
    </section>
    <section>
      <form action="/profile/search/locs" method="POST">
        <button type="submit" class="search-button">Locs</button>
      </form>
    </section>
    <section>
      <form action="/profile/search/curlycuts" method="POST">
        <button type="submit" class="search-button">Curly-Cuts</button>
      </form>
    </section>
    </section>


  </section>

  <h2>Top-rated beauty professionals</h2>
  <section class="featured bottom">
    <% for (let i = 0; i < 3&&i<profiles.length; i++){ %>
      <a href="/profile/<%= profiles[i]._id %>"><section>
        <span><%=profiles[i].businessName %></span>
        <span><%=profiles[i].name %></span>
        <span><%=profiles[i].role %></span>
      </section></a>
    <%} %>
    
  </section>
  




</body>
</html>
